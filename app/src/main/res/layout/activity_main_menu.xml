<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level9">

    <ImageButton
        android:background="@drawable/i_high_score"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:id="@+id/HighScoresMenu"

        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electorial Process,"
        android:textAlignment="center"
        android:textSize="36sp"
        android:id="@+id/textView0"
        android:layout_weight="1"
        android:layout_marginTop="65dp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/HighScoresMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="the"
        android:textAlignment="center"
        android:textSize="18sp"
        android:id="@+id/textView1"
        android:layout_weight="1"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abominable Race 2016!"
        android:textAlignment="center"
        android:textSize="36sp"
        android:id="@+id/textView2"
        android:layout_weight="1"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
